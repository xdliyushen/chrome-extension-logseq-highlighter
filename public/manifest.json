{
  "manifest_version": 3,
  "name": "Logseq Web Capture",
  "version": "0.1.0",
  "description": "Web capture for logseq",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Logseq Web Capture",
    "default_popup": "popup.html"
  },
  "commands": {
    "highlight-text": {
      "suggested_key": {
        "default": "Ctrl+H",
        "mac": "MacCtrl+H"
      },
      "description": "Highlight selected text"
    }
  },
  "permissions": [
    "contextMenus",
    "scripting",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}